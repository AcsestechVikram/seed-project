<section id = "section1">
  <div class="container">
    <h1>Users Information</h1>
      <p class="toolbar">
        <a class="create btn btn-primary" href="javascript:">Create Item</a>
        <span class="alert"></span>
      </p>
      <div class="fixed-table-container" >
        <div class="fixed-table-body">

          <table id="customer">

          </table>
        </div>
      </div>
  </div>
  <div id ="customerModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstName" placeholder="First Name">
          </div>
          <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastName" placeholder="Last Name">
          </div>
          <div class="form-group">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label>Country</label>
            <datalist id="countries"></datalist>
            <input type="text" list="countries" class="form-control" name="country" placeholder="Country">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary submit">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <div id ="deleteCustomer" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Confirm</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Are you sure. You want to delete this item?</label>

          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary submit">Yes</button>
        </div>
      </div>
    </div>
  </div>
</section>


<section id = 'section2'>
  <div class="container">
      <h1>Product Information</h1>
      <input type='text' disabled="true" id='customer_id' hidden="true" />
      <p class="toolbar">
        <a class="createProduct btn btn-primary" href="javascript:">Add Product</a>
        <span class="alert"></span>
      </p>
      <div class="fixed-table-container" >
        <div class="fixed-table-body">

          <table id="products">

          </table>
        </div>
      </div>
  </div>
  <div id ="productModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Product Name</label>
            <input type="text" class="form-control" name="product_name" placeholder="Product Name">
          </div>
          <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="product_price" placeholder="Price">
          </div>
          <div class="form-group">
            <label>Catlog Number</label>
            <input type="text" class="form-control" name="product_catlog" placeholder="Mobile">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary submit">Submit</button>
        </div>
      </div>
    </div>
  </div>
  <div id ="deleteProduct" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Confirm</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Are you sure. You want to delete this item?</label>

          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary submit">Yes</button>
        </div>
      </div>
    </div>
  </div>
</section>





</body>
</html>
